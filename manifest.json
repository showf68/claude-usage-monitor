{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "4.2",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "clipboardWrite",
    "cookies"
  ],
  "host_permissions": [
    "https://api.anthropic.com/*",
    "https://console.anthropic.com/*",
    "https://claude.ai/*"
  ],
  "action": {
    "default_popup": "popup-modern.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
