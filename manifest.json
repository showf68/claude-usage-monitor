{
  "manifest_version": 3,
  "name": "Claude Usage Monitor",
  "version": "3.1",
  "description": "Monitor your Claude Code usage with real-time progress circles and alerts.",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://api.anthropic.com/*",
    "https://console.anthropic.com/*"
  ],
  "action": {
    "default_popup": "popup-modern.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
